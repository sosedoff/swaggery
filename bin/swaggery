#!/usr/bin/env ruby

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require "rubygems"
require "optparse"
require "swaggery"

options   = Swaggery::Options.new.parse
generator = Swaggery::Generator.new(options)

generator.generate